---
import "../styles/global.css"
---
<h2>Contact</h2>
    <form id="contact-form"  method="POST" action="mailto: sardines@disroot.org" enctype="multipart/form-data >
        <input type="hidden" name="contact_number">
        <label>Name</label>
        <input type="text" name="user_name">
        <label>Email</label>
        <input type="email" name="user_email">
        <label>Message</label>
        <textarea name="message"></textarea>
        <input id="submit" type="submit" value="Send">
    </form>
<style>
    div{
        padding-top: 5em;
        text-align: center;
    }
    form{
        display: flex;
        flex-direction: column;
    }
    label{
        border-radius: 20%;
    }
    #submit{
        margin-top: 1rem;
        background-color: #E95420;
        border-radius: 10px;
    }
</style>