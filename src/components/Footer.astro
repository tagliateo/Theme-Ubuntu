---
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()}  Teodoro Garcia. All rights reserved.
</footer>
<style>
	footer {
		border-top: 3.5px solid #E95420;
		padding: 2em 1em 6em 1em;
		background: #000;
		text-align: center;
		color: white;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
		color: white;
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
</style>
